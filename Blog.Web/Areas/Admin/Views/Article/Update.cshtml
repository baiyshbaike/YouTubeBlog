@model ArticleUpdateDto
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Article management /</span> Add article
    </h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Default</h5>
                <form asp-controller="Article" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id"/>
                        <div class="form-group">
                            <label asp-for="CategoryId">Category</label>
                            <select id="categoryLisr" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"></select>
                            <span class="text-danger" asp-validation-for="CategoryId"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title"for="defaultFormControlInput" class="form-label">Title</label>
                            <input asp-for="Title"type="text" class="form-control mb-3" id="articleTitle" placeholder="John Doe" aria-describedby="defaultFormControlHelp">
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content" for="defaultFormControlInput" class="form-label">Content</label>
                            <textarea asp-for="Content" type="text" class="form-control mb-3" id="articleContent" style="min-height: 300px" placeholder="John Doe" aria-describedby="defaultFormControlHelp"></textarea>
                            <span class="text-danger" asp-validation-for="Content"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="Image.FileName" for="defaultFormControlInput" class="form-label">Photo</label>
                                <img style="height:25em;width:25em" class="mb-3" src="~/images/@Model.Image.FileName" alt="@Model.Title" />
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Photo" for="defaultFormControlInput" class="form-label">Photo</label>
                                <input asp-for="Photo" type="file" accept="image/*" class="form-control mb-3" id="articleContent" aria-describedby="defaultFormControlHelp">
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>