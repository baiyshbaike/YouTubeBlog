@model List<CategoryDto>
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Category management /</span> Basic Tables
    </h4>
    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Creation date</th>
                        <th>Constituent</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Title</th>
                        <th>Creation date</th>
                        <th>Constituent</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <td>@category.Name</td>
                            <td>@category.CreatedDate.ToShortDateString()</td>
                            <td>@category.CreatedBy</td>
                            <td>@(category.IsDeleted ? "Not Active" : "Active")</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Category" asp-action="UndoDelete" data-id="@category.Id" asp-route-categoryId="@category.Id" class="btn btn-warning btn-sm"><i class="bx bx-undo"></i></a>
                                @* <a asp-area="Admin" asp-controller="Category" asp-action="Delete" data-id="@category.Id" asp-route-categoryId="@category.Id" class="btn btn-danger btn-sm"><i class="bx bx-minus-circle"></i></a> *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/categoryindex.js" type="application/ecmascript"></script>
}