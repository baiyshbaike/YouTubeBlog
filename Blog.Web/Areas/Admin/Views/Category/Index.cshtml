@model List<CategoryDto>
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Category management /</span> Basic Tables
    </h4>
    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Category" asp-action="Add">
                Add category <i class="bx bx-plus"></i>
            </a>
            <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Creation date</th>
                        <th>Constituent</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Title</th>
                        <th>Creation date</th>
                        <th>Constituent</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var cateogry in Model)
                    {
                        <tr name="@cateogry.Id">
                            <td>@cateogry.Name</td>
                            <td>@cateogry.CreatedDate.ToShortDateString()</td>
                            <td>@cateogry.CreatedBy</td>
                            <td>@(cateogry.IsDeleted ? "Not Active" : "Active")</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Category" asp-action="Update" data-id="@cateogry.Id" asp-route-cateogryId="@cateogry.Id" class="btn btn-primary btn-sm"><i class="bx bxs-edit"></i></a>
                                <a asp-area="Admin" asp-controller="Category" asp-action="Delete" data-id="@cateogry.Id" asp-route-cateogryId="@cateogry.Id" class="btn btn-danger btn-sm"><i class="bx bx-minus-circle"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/Categoryindex.js" type="application/ecmascript"></script>
}